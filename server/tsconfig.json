{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES6",
    "outDir": "./dist",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["server/types"]
  },
  "exclude": [
    "node_modules",
    "client",
    "cypress",
    "dist",
  ]
}